<div class="jumbotron">
  <h1>Blocipedia</h1>

  <% if current_user %>
	<p>
	  <%= link_to "Wikis", wikis_path, class: 'btn btn-primary' %>
  <% else %>
    <p>
	  <%= link_to "Sign In", new_user_session_path, class: 'btn btn-primary' %> or 
	  <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
	</p>
  <% end %>

</div>

<div class="row">
	<div class="col-md-8">
		<h2>Create Public Wikis</h2>
		<p>Edit and View public wikis. </br> <%= link_to "Sign Up", new_user_registration_path, class: 'link' %>!</p>
	</div>

	<div class="col-md-8">
		<h2>Create Private Wikis</h2>
		<p>Manage private wikis.</p>
		<p><%= link_to "Upgrade Account", new_charge_path, class: 'btn btn-primary' %>
	</div>
</div>